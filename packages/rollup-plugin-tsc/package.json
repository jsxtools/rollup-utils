{
	"name": "@jsxtools/rollup-plugin-tsc",
	"description": "A Rollup plugin for compiling TypeScript files with the TypeScript Compiler API.",
	"version": "0.2.3",
	"type": "module",
	"exports": {
		".": "./dist/tsc-rollup-plugin.js",
		"./api": "./dist/tsc-api.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc",
		"clean": "rm -rf dist tsconfig.tsbuildinfo",
		"clean:build": "rm -rf dist tsconfig.tsbuildinfo && tsc",
		"clean:watch": "rm -rf dist tsconfig.tsbuildinfo && tsc --watch",
		"watch": "tsc --watch"
	},
	"author": "Jonathan Neal <jonathantneal@hotmail.com> (https://jonneal.dev)",
	"license": "MIT-0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jsxtools/rollup-utils.git",
		"directory": "packages/rollup-plugin-tsc"
	},
	"homepage": "https://github.com/jsxtools/rollup-utils/tree/main/packages/rollup-plugin-tsc",
	"dependencies": {
		"@jsxtools/rollup-plugin-utils": "^0.2.1"
	},
	"devDependencies": {
		"@types/node": "^24.6.2",
		"rollup": "^4.6.0",
		"typescript": "^5.4.5"
	},
	"peerDependencies": {
		"rollup": "^4.6.0",
		"typescript": "^5.4.5"
	}
}
